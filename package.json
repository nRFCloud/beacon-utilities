{
	"name": "beacon-utilities",
	"version": "1.1.0",
	"main": "dist/beacons.cjs.js",
	"module": "dist/beacons.esm.js",
	"browser": "dist/beacons.umd.js",
	"dependencies": {
		"eddystone-url-encoding": "^1.0.1"
	},
	"devDependencies": {
		"@types/jest": "^23.3.12",
		"@types/ms": "^0.7.30",
		"del-cli": "^1.1.0",
		"jest": "^23.6.0",
		"rollup": "^1.0.0",
		"rollup-plugin-commonjs": "^9.2.0",
		"rollup-plugin-json": "^3.1.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-resolve": "^4.0.0",
		"rollup-plugin-typescript": "^1.0.0",
		"ts-jest": "^23.10.5",
		"ts-node": "^7.0.1",
		"tslib": "^1.9.3",
		"typescript": "^3.2.2"
	},
	"scripts": {
		"clean": "del-cli dist/*.js",
		"build": "npm run clean && rollup -c --environment NODE_ENV:production",
		"dev": "rollup -c -w",
		"test": "jest",
		"pretest": "npm run build"
	},
	"files": [
		"dist"
	],
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "((test|spec))\\.(ts|tsx|js)$",
		"coverageReporters": [
			"html",
			"lcov"
		],
		"globals": {
			"ts-jest": {
				"diagnostics": {
					"warnOnly": true
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:nRFCloud/beacon-utilities.git"
	},
	"license": "BSD-3-Clause"
}
